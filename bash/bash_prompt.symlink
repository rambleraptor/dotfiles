#!/bin/bash
# vim: set filetype=sh :

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
  export TERM='gnome-256color';
elif infocmp xterm-256color >/dev/null 2>&1; then
  export TERM='xterm-256color';
fi;

echo_reset() {
  echo -e "\001${1}\002"
}

git_prompt() {
  local branchName='';

  # Check if the current directory is in a Git repository.
  if [ "$(git rev-parse --is-inside-work-tree &>/dev/null; echo "${?}")" == '0' ]; then

    # Get the short symbolic ref.
    # If HEAD isnâ€™t a symbolic ref, get the short SHA for the latest commit
    # Otherwise, just give up.
    branchName="$(git symbolic-ref --quiet --short HEAD 2> /dev/null || \
      git rev-parse --short HEAD 2> /dev/null || \
      echo '(unknown)')";

    if [[ $(git status --porcelain) == "" ]]; then
      branchColor="$(echo_reset $bold)$(echo_reset $green)"
    else
      branchColor="$(echo_reset $bold)$(echo_reset $red)"
    fi

    echo -e "$(echo_reset $reset)(${branchColor}${branchName}$(echo_reset $reset))"

  else
    return;
  fi;
}

cloud=""
if grep -q "^flags.* hypervisor" /proc/cpuinfo ; then
  cloud="â˜ï¸  "
fi

if tput setaf 1 &> /dev/null; then
  tput sgr0; # reset colors
  bold=$(tput bold);
  reset=$(tput sgr0);
  # Solarized colors, taken from http://git.io/solarized-colors.
  black=$(tput setaf 0);
  blue=$(tput setaf 33);
  cyan=$(tput setaf 37);
  green=$(tput setaf 64);
  orange=$(tput setaf 166);
  purple=$(tput setaf 125);
  red=$(tput setaf 124);
  violet=$(tput setaf 61);
  white=$(tput setaf 15);
  yellow=$(tput setaf 136);
else
  bold='';
  reset="\e[0m";
  # shellcheck disable=SC2034
  black="\e[1;30m";
  blue="\e[1;34m";
  cyan="\e[1;36m";
  green="\e[1;32m";
  # shellcheck disable=SC2034
  orange="\e[1;33m";
  # shellcheck disable=SC2034
  purple="\e[1;35m";
  red="\e[1;31m";
  violet="\e[1;35m";
  white="\e[1;37m";
  yellow="\e[1;33m";
fi;

server_name(){
  if [[ -n $DEFAULT_USER ]]; then
    echo "ðŸš€  "
  else
    echo "${cloud}[\u@\H]"
  fi
}

PS1="\n"; # newline
PS1+="\[${blue}\]$(server_name)\[${reset}\]"; # username
PS1+="\[${bold}\]\[${cyan}\] \w\[${reset}\]"; # working directory
PS1+="\$(git_prompt)"
PS1+="\[${violet}\] â€º \[${reset}\]"; # working directory
export PS1;
